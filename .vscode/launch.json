{
	"version": "0.2.0",
	"configurations": [
		{
			"name"       : "Numel (launch)",
			"python"     : "python",
			"type"       : "debugpy",
			"justMyCode" : false,
			"request"    : "launch",
			"program"    : "${file}",
			"args"       : ["--port=8000", "--config_path=app/config.json"],
			"console"    : "internalConsole"
		},
		{
			"name"       : "Numel (attach)",
			"type"       : "debugpy",
			"justMyCode" : false,
			"request"    : "attach",
			"connect"    : {
				"host" : "localhost",
				"port" : 5678
			},
			"pathMappings" : [
				{
					"localRoot"  : "${workspaceFolder}",
					"remoteRoot" : "/app"
				}
			]
		}
	]
}
